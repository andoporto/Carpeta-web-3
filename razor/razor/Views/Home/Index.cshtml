            var mensaje = "Hola Mundo";
            var diaDeLaSemana = DateTime.Now.DayOfWeek;
            var mensaje2 = mensaje + " Hoy es " + diaDeLaSemana;
            @mensaje2;
        }
        <br />
        <br />
        @{
            var mensaje3 = "@: Hola Mundo";
            @mensaje3;
        }
        <br />
        <br />
        @{
            var mensaje4 = "unemail@gmail.com";
            @mensaje4;
        }
        <br />
        <br />
        @{
            var nombre = "Juan Perez";
            var rol = "Desarrollador ASP:NET MVC";
            <div>
                Nombre: @nombre
                Rol: @rol
            </div>
        }
        <br />
        <br />


    </div>
</body>
</html>

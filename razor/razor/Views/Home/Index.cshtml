
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Iteracción</h1>
        <ul>
            @for (int i = 0; i < 10; i++)
            {
                <li>@i</li>
            }
        </ul>
        <br />
        @{
            var mensaje1 = "Hola Mundo";
            @mensaje1
        }
        <br />
        <br />
        <span>La hora es: @DateTime.Now</span>
        <br />
        <br />
